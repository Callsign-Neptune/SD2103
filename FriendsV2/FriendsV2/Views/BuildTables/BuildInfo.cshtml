@model FriendsV2.Models.BuildTable

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Friends on the Block</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Discords">Discords</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item active dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownPortfolio" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Builds
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPortfolio">
                            <a class="dropdown-item" asp-controller="BuildTables" asp-action="List">Posts</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownBlog" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            My Messages
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownBlog">
                            <a class="dropdown-item" asp-area="" asp-controller="Messages" asp-action="Inbox">Inbox</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Messages" asp-action="NewMessage">Send Messages</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Messages" asp-action="Read">Read</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="BuildUsers" asp-action="ProfileInfo">My Profile</a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>
<h2>Details</h2>

<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        @Html.DisplayFor(model => model.Buildname)
        <small></small>
    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item active">Post</li>
    </ol>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="~/buildPhotos/@Html.DisplayFor(model => model.BuildPhoto)" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Build Description</h3>
            <p>@Html.DisplayFor(model => model.BuildContent)</p>
            <h3 class="my-3">Build Details</h3>
            <ul>
                <li>Time Spent Building: @Html.DisplayFor(model => model.BuildTime) hours</li>
                <li>World Seed: @Html.DisplayFor(model => model.WorldSeed)</li>
                <li># of Builders: @Html.DisplayFor(model => model.BuilderNum)</li>
                <li>Date Posted: @Html.DisplayFor(model => model.BuildDate)</li>
            </ul>
        </div>
        <div>
            <a asp-action="List">Back to Posts</a>
        </div>
